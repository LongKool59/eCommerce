@model eCommerce.Areas.User.Models.NguoiDungViewModel

@{

  ViewBag.Title = "Edit";
  Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";

}
<style>
  h1.function-page-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: black;
    text-align: center;
    padding: 1.5rem 0;
    letter-spacing: 1px;
  }
</style>
<section class="body-content">
  @using (Html.BeginForm("Edit", "DetailsUser", FormMethod.Post))
  {
    @Html.AntiForgeryToken()

    <div class="form-horizontal detail-info-view">
      <h1 class="function-page-title">SỬA THÔNG TIN CÁ NHÂN</h1>
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(model => model.MaNguoiDung)
      @Html.HiddenFor(model => model.HinhAnh)
      @Html.HiddenFor(model => model.Password)
      @Html.HiddenFor(model => model.NgayDangKy)
      @Html.HiddenFor(model => model.IsAdmin)
      @Html.HiddenFor(model => model.IsRequesting)
      @Html.HiddenFor(model => model.IsApproved)
      @Html.HiddenFor(model => model.SoDuVi)
      @Html.HiddenFor(model => model.TimeRequesting)
      @Html.HiddenFor(model => model.TrangThai)

      <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })

            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.SoCMND, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.SoCMND, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoCMND, "", new { @class = "text-danger" })>
          </div>
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.SDT, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.MaPhuong, htmlAttributes: new { @class = "control-label " })
            @Html.DropDownListFor(s => s.MaPhuong, ViewBag.ListPhuong != null ? ViewBag.ListPhuong as SelectList : new SelectList(""), "Chọn phường", new { @class = "form-control", style = "height: 40px; font-size:18px" })
            @Html.ValidationMessageFor(model => model.MaPhuong, "", new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.MaQuan, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(s => s.MaQuan, ViewBag.ListQuan != null ? ViewBag.ListQuan as SelectList : new SelectList(""), "Chọn quận", new { @class = "form-control", style = "height: 40px; font-size:18px" })
            @Html.ValidationMessageFor(model => model.MaQuan, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.MaTP, htmlAttributes: new { @class = "control-label" })
            @if (ViewBag.DSThanhPho != null)
            {
              @Html.DropDownListFor(s => s.MaTP, ViewBag.DSThanhPho as SelectList, "Chọn thành phố", new { @class = "form-control", style = "height: 40px; font-size:18px" })
            }
            @Html.ValidationMessageFor(model => model.MaTP, "", new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-6">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label" })
            <img src="@Url.Content(Model.HinhAnh)" alt="Hình ảnh người dùng" height="70" width="70" />
            <input type="file" id="file" name="ImageFile" accept="image/*" size="40">
            @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
          </div>
        </div>



        @Html.Partial("_Notifications")
        <div class="bottom-function-button">
          <button id="btn-save" type="submit" name="submit" value="Luu">Lưu</button>
          <button id="btn-back" type="submit" name="submit" value="QuayLai">Quay lại</button>
        </div>

      </form>

    </div>
  }
</section>

<script src="~/assets/js/GetDSQuan_Phuong.js"></script>
