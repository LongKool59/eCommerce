@model eCommerce.Models.ChangePasswordModel

@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}

<style>
h1.function-page-title {
    font-size: 2.2rem;
    font-weight: 400;
    color: black;
    text-align: center;
    padding: 1.5rem 0;
    background: #84CEEB;
    font-weight: bold;
}
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal detail-info-view">
        <h1 class="function-page-title">THÔNG TIN CÁ NHÂN</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhauCu, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.MatKhauCu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhauCu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhauMoi, htmlAttributes: new { @class = "control-label" })
            <div class="">
                <div class="checkbox">
                    @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhauMoi, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.XacNhanMatKhau, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Partial("_Notifications")
        <div class="bottom-function-button">
            <button id="btn-save" type="submit" name="submit" value="Luu">Sửa</button>
            <button id="btn-back" type="submit" name="submit" value="QuayLai">Quay lại</button>
        </div>
    </div>
}
