                            $("#bid").val(function () {
                                return parseInt(this.value, 10) + @Model.DauGia.MucNangToiThieu;
                            });
                            $("#bid_1").val(function () {
                                return parseInt(this.value, 10) + @Model.DauGia.MucNangToiThieu});
                        });
                        $("#minus").click(function () {
                            $("#bid").val(function () {
