@model eCommerce.Areas.User.Models.ViewModel
@using eCommerce.Models;
@{
  ViewBag.Title = "Đấu giá";
  Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";}


<style>
  h1.function-page-title {
    font-size: 2.5rem;
    color: white;
    text-align: center;
    padding: 1.5rem 0;
    font-weight: 600;
    margin: 3rem;
    letter-spacing: 1px;
  }

  p {
    padding: 2px;
    font-weight: bold;
    font-size: 14px;
