              <input type="email" class="form-control" id="inputEmail4" placeholder="@Html.DisplayFor(model => model.DauGia.MaNguoiBan)">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Mã người mua: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.MaNguoiMua)">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Ngày thanh toán: </label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="@Html.DisplayFor(model => model.DauGia.NgayThanhToan)">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Giá cuối: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.GiaCuoi)">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Giá hiện tại: </label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="@TempData["value"]">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Giá cuối: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.GiaCuoi)">
            </div>
          </div>

          <p>

            @if (DateTime.Now > Model.DauGia.NgayBatDau && DateTime.Now < Model.DauGia.NgayKetThuc)
            {
              <button id="plus">+</button>
              <button id="minus">-</button>
              <input name="bid" id="bid" disabled="true" value="@TempData["value"]" />
              using (Html.BeginForm("Bid_1", "Home", FormMethod.Post))
              {
                <input name="id" hidden="true" value="@Model.DauGia.MaDauGia" />
                <input id="bid_1" name="bid_1" hidden="true" value="@TempData["value"]" />
                <input type="submit" value="Ra giá" class="btn btn-default" />
              }
            }



            @if (DateTime.Now > Model.DauGia.NgayBatDau && DateTime.Now < Model.DauGia.NgayKetThuc)
            {
            <p>Thời gian đấu giá còn lại: </p>

            <p id="bidtime"></p>

          }
          else if (DateTime.Now < Model.DauGia.NgayBatDau)
          {
            <p>Đấu giá sẽ bắt đầu trong: </p> <p id="start"></p>

          }
          else
          {
            <p> Buổi đấu giá đã kết thúc</p>
          }

            </p>
          </form>

          <p>Danh sách khách hàng đấu giá</p>
          <table class="table1">
            @Html.Partial("_Notifications")
            @{
              var a = db.MucNangs.Where(m => m.MaDauGia == Model.DauGia.MaDauGia).ToList();
              foreach (var item in a)
              {
                var nd = db.NguoiDungs.Where(m => m.MaNguoiDung == item.MaNguoiDung).SingleOrDefault();
                <p>@nd.HoTen - @item.GiaTri VNĐ</p>
              }
            }

          </table>
          <a href='@Url.Action("Home", "Home")' class="btn btn-reload btn-danger ml-3" style="color:black"><i class="fas fa-arrow-alt-circle-left"></i> QUAY LẠI </a>
        </section>
      </div>
    </div>
  </section>




