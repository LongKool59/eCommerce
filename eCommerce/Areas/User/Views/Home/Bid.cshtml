<section class="body-content">
  <h1 class="function-page-title">ĐẤU GIÁ SẢN PHẨM</h1>

  <div>
    <div class="row">
      <div class="col-md-6">
        <div>
          @if (Model.YeuThich)
          {
            <a href="/User/Home/UnFavorite?id=@Model.DauGia.MaDauGia&loai=0" class="rating"><i class="fas fa-star" style="z-index: 2; right: 3%; top: 1%;"></i></a>
          }
          else
          {
            <a href="/User/Home/Favorite?id=@Model.DauGia.MaDauGia&loai=0" class="rating"><i class="far fa-star" style="z-index: 2; right: 3%; top: 1%;"></i></a>
          }
        </div>
        <p>Hình ảnh sản phẩm:</p>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="@Url.Content(Model.Hinh[0])" alt="First slide" style="width:400px; height:600px">
            </div>
            @for (int i = 1; i < Model.Hinh.Length; i++)
            {
              <div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content(Model.Hinh[i])" alt="slide @(i+1)" style="width:400px; height:600px">
              </div>
            }
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <section class="bid-form">
        <h4>Thông tin sản phẩm</h4>
        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Mã đấu giá: </label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="@Html.DisplayFor(model => model.DauGia.MaDauGia)">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Tên sản phẩm: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.TenSanPham)">
            </div>
          </div>
          <div class="form-group">
            <label for="inputAddress">Loại sản phẩm: </label>
            <input type="text" class="form-control" id="inputAddress" placeholder="@foreach (var item in Model.ListLoaiSanPham)
          {
          @Html.DisplayFor(modelItem => item.TenLoai)
          }">
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Mô tả sản phẩm:</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">
             @Html.DisplayFor(model => model.DauGia.MoTa)
          </textarea>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Vị trí: </label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="@Html.DisplayFor(model => model.DauGia.ViTri)">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Giá khởi điểm: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.GiaBanDau)">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Mức nâng tối thiểu: </label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="@Html.DisplayFor(model => model.DauGia.MucNangToiThieu)">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Ngày bắt đầu: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.NgayBatDau) ">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Ngày kết thúc: </label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="@Html.DisplayFor(model => model.DauGia.NgayKetThuc))">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Ngày đăng: </label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="@Html.DisplayFor(model => model.DauGia.NgayDang) ">
            </div>
          </div>
        </form>
      </section>

      <section class="bid-form">
        @*Bắt đầ copy từ chỗ này ------ Chỗ này thay cho cái chỗ từ chỗ giá sản phẩm đến hết đoạn cụm button và using *@
        @{
          DauGiaEntities db = new DauGiaEntities();
          var mucnang = db.MucNangs.Where(m => m.MaDauGia == Model.DauGia.MaDauGia).ToList();
          if (mucnang.Count() > 0)
          {
            TempData["value"] = db.MucNangs.Where(m => m.MaDauGia == Model.DauGia.MaDauGia).Max(m => m.GiaTri);
          }
          else
          {
            TempData["value"] = Model.DauGia.GiaBanDau;
          }

        }

        <h4>Thông tin giao dịch</h4>
