@model eCommerce.Models.ViewModels.NguoiDungViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutSignIn.cshtml";
}

<section class="w3l-forms-23">
    <div class="forms23-block-hny">
        <div class="wrapper">
            <div class="d-grid forms23-grids">
                <div class="form23">
                    <div class="main-bg">
                        <h6 class="sec-one"></h6>
                        <div class="speci-login first-look">
                            <img src="images/user.png" alt="" class="img-responsive">
                        </div>
                    </div>
                    <div class="bottom-content">
                        @using (Html.BeginForm("CheckForgotPassword", "SignIn"))
                        {
                            @Html.AntiForgeryToken();
                            @Html.TextBoxFor(model => model.Email, new { @class = "input-form", @placeholder = "Nhập email. Ví dụ: abc@gmail.com", @style = "width:360px", type="email" })
                            @Html.Partial("_Notifications")
                            <input type="submit" value="Gửi mail" class="btn btn-success" id="btnSendEmail" name="command" />
                            <input type="submit" value="Hủy" class="btn btn-danger" id="btnCancel" name="command" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

